{
  "vendor": "origamipartnerspartnerbr",
  "name": "origami-vtex-connector",
  "version": "0.0.1",
  "title": "OrigamiPay Connector",
  "description": "Conector de pagamentos integrando VTEX IO com a OrigamiPay.",
  "builders": {
    "node": "6.x",
    "paymentProvider": "1.x",
    "react": "3.x",
    "pages": "1.x",
    "messages": "1.x"
  },
  "policies": [
    {
      "name": "vbase-read-write"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api-homolog.origamipay.com.br",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.origamipay.com.br",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "httpstat.us",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "*",
        "path": "*"
      }
    }
  ],
  "billingOptions": {
    "type": "free"
  },
  "settingsSchema": {
    "title": "Configurações do OrigamiPay Connector",
    "type": "object",
    "properties": {
      "origamiEnvironment": {
        "title": "Ambiente Origami",
        "type": "string",
        "default": "homolog",
        "enum": [
          "homolog",
          "production"
        ]
      },
      "origamiKey": {
        "title": "Origami Key",
        "type": "string"
      },
      "origamiToken": {
        "title": "Origami Token",
        "type": "string"
      }
    },
    "required": []
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
